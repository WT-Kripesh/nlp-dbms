pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: '*/light']], 
                    userRemoteConfigs: [[url: 'https://github.com/WT-Kripesh/nlp-dbms.git']]])
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    sh 'ansible-playbook /var/lib/jenkins/workspace/nlp-dbms-pipeline/playbook.yaml'
                }
            }
        }
    }

    post {
        failure {
            echo 'Deployment failed'
        }
        success {
            echo 'Deployment successful'
        }
    }
}
